{
    "include": ["*.ts", "./**/*.ts"],
    "compilerOptions": {
        "strictNullChecks": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitThis": true,
        "checkJs": true,
        "allowJs": true,
        "pretty": true,
        "target": "esnext",
        "module": "ESNext",
        "jsx": "preserve",
        "declaration": true,
        "removeComments": true,
        "importHelpers": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}
